---
import JavasScript from '../assets/javascript.png';
import ReactImg from '../assets/react.png';
import Mongo from '../assets/mongo.png';
import Rails from '../assets/rails.png';
import Go from '../assets/go.png';
import Dotnet from '../assets/dotnet.png';
import SQL from '../assets/SQL.png';
import Docker from '../assets/docker.png';
import Vue from '../assets/Vue.png';
---

<div id='skills' class='w-full pt-32 h-screen'>
  <div
    class='max-w-[1500px] mx-auto p-4 flex flex-col justify-center w-full h-full'
  >
    <div>
      <p class='text-4xl font-bold inline border-b-4 border-[#31748f]'>
        Skills
      </p>
      <p class='py-6'>These are the technologies I've worked with</p>
    </div>

    <div class='w-full grid grid-cols-2 sm:grid-cols-3 gap-4 text-center py-8'>
      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={JavasScript} alt='JavaScript icon' />
        <p class='my-4'>JavaScript</p>
      </div>
      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={ReactImg} alt='React icon' />
        <p class='my-4'>React</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Vue} alt='Vue icon' />
        <p class='my-4'>Vue</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Go} alt='Go icon' />
        <p class='my-4'>Go</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Docker} alt='Docker icon' />
        <p class='my-4'>Docker</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Mongo} alt='Mongo icon' />
        <p class='my-4'>MongoDB</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={SQL} alt='SQL icon' />
        <p class='my-4'>SQL</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Rails} alt='Rails icon' />
        <p class='my-4'>Rails</p>
      </div>

      <div
        class='shadow-md shadow-gray-300 hover:scale-110 hover:bg-gradient-to-r from-black via-[#31748f] to-white hover:underline hover:text-white duration-500'
      >
        <img class='w-20 mx-auto' src={Dotnet} alt='Dotnet icon' />
        <p class='my-4'>Dotnet Core</p>
      </div>
    </div>
  </div>
</div>
