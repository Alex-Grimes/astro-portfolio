---
import JavasScript from '../assets/javascript.png';
import ReactImg from '../assets/react.png';
import Node from '../assets/node.png';
import GitHub from '../assets/github.png';
import Mongo from '../assets/mongo.png';
import Ruby from '../assets/ruby.png';
import Rails from '../assets/rails.png';
import HTML from '../assets/html.png';
import CSS from '../assets/css.png';
---

<div id='skills' class='w-full h-screen'>
  <div
    class='max-w-[1000px] mx-auto p-4 flex flex-col justify-center w-full h-full'
  >
    <div>
      <p class='text-4xl font-bold inline border-b-4 border-[#FFA600]'>
        Skills
      </p>
      <p class='py-6'>These are the technologies I've worked with</p>
    </div>

    <div class='w-full grid grid-cols-3 sm:grid-cols-3 gap-4 text-center py-8'>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={JavasScript} alt='JavaScript icon' />
        <p class='my-4'>JavaScript</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={ReactImg} alt='React icon' />
        <p class='my-4'>React</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={Node} alt='Node icon' />
        <p class='my-4'>Node.js</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={GitHub} alt='Github icon' />
        <p class='my-4'>GitHub</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={Mongo} alt='Mongo icon' />
        <p class='my-4'>MongoDB</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={CSS} alt='CSS icon' />
        <p class='my-4'>CSS</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={Ruby} alt='Ruby icon' />
        <p class='my-4'>Ruby</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={Rails} alt='Rails icon' />
        <p class='my-4'>Rails</p>
      </div>
      <div class='shadow-md shadow-gray-300 hover:scale-110 duration-500'>
        <img class='w-20 mx-auto' src={HTML} alt='HTML icon' />
        <p class='my-4'>HTML</p>
      </div>
    </div>
  </div>
</div>
